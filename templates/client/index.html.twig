{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h3 class="card-title mb-0 text-center">Client</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="myTable" class="table nowrap align-middle table-datatable" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Numero</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.nom }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.numero }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('app_client_show', {'id': client.id}) }}">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
            </table>
        </div>
    </div>
</div>
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('datatable') }}
    {% endblock %}
